<div class="px-8 py-2 h-12 bg-white border-b-2 border-green-200 shadow-md w-screen flex justify-between z-10">
  <div class="ml-2 sm:ml-0 font-bold text-xl">Book Club</div>
  <%= link_to "Books", books_path %>
</div>
<div class="w-full">
  <div id="books" class="min-w-full flex space-x-4 p-4">
    <% @books.each do |book| %>
      <%= link_to book do %>
        <div class="max-w-[200px] rounded-lg shadow-lg p-4 bg-white">
          <img src="<%= book.image_url %>">
        </div>
      <% end %>
    <% end %>
  </div>
</div>
