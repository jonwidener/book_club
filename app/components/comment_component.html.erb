<% unless @comment %>
    <div class="space-y-1 shadow-lg rounded-lg p-2 border-green-800 border">
        <form method="post" action="/comments">
            <input type=hidden name="comment[key]" value="<%= @key %>">
            <input type=hidden name="comment[key_type]" value="<%= @key_type %>">
            <div class="space-y-1">
                <div class="w-full justify-between flex flex-col sm-flex-row sm:space-x-2">
                    <div>
                        Your Name:
                    </div> 
                    <input name="comment[author]" class="flex-grow rounded-lg border-green-500 border-2 ring-green-200 focus:ring-2 focus:border-green-800 focus:outline-none">
                </div>
                <div>
                    <div>Your comment: </div>
                    <textarea name="comment[note]" class="appearance-none min-h-[auto] w-full rounded-lg border-2 border-green-500 focus:border-green-800 focus:ring-2 focus:ring-green-200"></textarea>
                </div>
                <button type="submit" class="rounded-xl text-white block bg-green-600 hover:bg-green-800 py-2 px-4">Submit</button>
            </div>
        </form>
    </div>
<% else %>
    <div class="space-y-1 shadow-lg rounded-lg p-2 border-green-800 border">
        <div>
            <span class="font-semibold">
                <%= @comment.author %>
            </span>
            <span>
                said:
            </span>
        </div>
        <div>
            <%= @comment.note %>
        </div>
    </div>
<% end %>